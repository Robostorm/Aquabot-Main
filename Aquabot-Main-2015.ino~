#include <Servo.h>

#include "pins.h"
#include "conf.h"
#include "states.h"

#include "Dispenser.h"

Servo servo;



int servoState = 0;
int servoWait = 0;

void setup(){
  pinMode(IRPIN, OUTPUT);
  pinMode(PHOTOPIN, OUTPUT);
  pinMode(BILLPIN, OUTPUT);
  pinMode(SERVOPIN, OUTPUT);
  pinMode(LEDPIN, OUTPUT);
}

void loop(){
  unsigned long now = millis();
  ledUpdate(now);
  Dispenser::update(now);
}

int billUpdate(unsigned long now){
  static int state = DISPREADY;
  
  switch(state){
    case DISPREADY:
      if(irState == LOW){
        state = GETTING;
      }
      servoState = 0;
      servoWait = 0;
      return 1;
    case DISPGETTING:
      billPower = 255;
      if(photoState == HIGH) {
        state = DISPENSING;
      }
      actionText = "Bill Detected";
      return 1;
    case DISPDISPENSING:
      if(photoState == HIGH){
        actionText = "Waiting for Bill";
        return 1;
      }else{
        billPower = 0;
        dispense(now);
      }
      return 1;
        
    case DISPDONE:
      state = READY;
      return 1;
  }
}

int ledUpdate(unsigned long now){
  static unsigned long ledMillis = 0UL;
  static int ledState = LOW;

  if(now - ledMillis >= LEDDELAY){
    if(ledState == HIGH){
      ledState = LOW;
    }else if(ledState == LOW) {
      ledState = HIGH;
    }
    digitalWrite(LEDPIN, ledState);
    ledMillis = now;
  }
}

int lcdUpdate(){
  
}
